<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="18dp"
        android:textColorHint="@color/white"
        app:hintAnimationEnabled="true"
        app:startIconDrawable="@drawable/ic_person"
        app:startIconTint="@color/white">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/email_round_corners"
            android:hint="@string/login_hint"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:textColorHint="@color/white"
        app:hintAnimationEnabled="true"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/white">

        <EditText
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/email_round_corners"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox_remember_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:checked="false"
            android:text="@string/remember_me"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:drawablePadding="6dp"
            android:paddingStart="10dp"
            android:text="Forget password?"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:drawableLeftCompat="@drawable/ic_lock_reset" />
    </LinearLayout>

    <TextView
        android:id="@+id/btt_login"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_btt_round_corners"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:paddingStart="12dp"
        android:text="LOG IN"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/btt_signup"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/login_btt_round_corners"
        android:gravity="center"
        android:paddingStart="12dp"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textSize="18sp" />


</LinearLayout>